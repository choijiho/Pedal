<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context="net.gringrid.pedal.HomeActivity" >

    <ImageView 
        android:id="@+id/id_iv_gps_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_location_off_white_48dp"
        android:visibility="gone"
        />
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <!-- SPEED START -->
	   	<LinearLayout
	   	    android:layout_width="0dp" 
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="6"
	   	    android:orientation="vertical"
	   	    >
	   	    <TextView 
	   	        android:layout_width="match_parent"
	   	        android:layout_height="wrap_content"
	   	        style="@style/title"
	   	        android:text="@string/title_speed"
	   	        />
	   	    <LinearLayout 
	   	        android:layout_width="match_parent"
	   	        android:layout_height="wrap_content"
	   	        android:orientation="horizontal"
	   	        >
		   	    <TextView 
		   	        android:layout_width="0dp"
		   	        android:layout_height="wrap_content"
		   	        android:layout_weight="7"
		   	        android:textSize="60sp"
		   	        android:id="@+id/id_tv_current_speed"
		   	        android:gravity="right"
		   	        android:text="@string/default_value_kmh"
		   	        />
		   	    <TextView 
		   	        android:layout_width="0dp"
		   	        android:layout_height="wrap_content"
		   	        android:layout_weight="3"
		   	        android:textSize="17sp"
		   	        android:text="@string/unit_kmh"
		   	        />
	   	    </LinearLayout>
	   	</LinearLayout> 
	    <!-- SPEED END -->
		
		<!-- AVG SPEED, ALTITUDE START -->
	   	<LinearLayout
	   	    android:layout_width="0dp" 
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="4"
	   	    android:orientation="vertical"
	   	    >
	   	    <!-- AVG SPEED START -->
		   	<LinearLayout
		   	    android:layout_width="match_parent" 
		   	    android:layout_height="wrap_content"
		   	    android:orientation="vertical"
		   	    android:layout_marginBottom="5dp"
		   	    >
		   	    <TextView 
		   	        android:layout_width="match_parent"
		   	        android:layout_height="wrap_content"
		   	        style="@style/title"
		   	        android:text="@string/title_avg_speed"
		   	        />
		   	    <LinearLayout 
		   	        android:layout_width="match_parent"
		   	        android:layout_height="wrap_content"
		   	        android:orientation="horizontal"
		   	        >
			   	    <TextView 
			   	        android:id="@+id/id_tv_avg_speed"
			   	        android:layout_width="0dp"
			   	        android:layout_height="wrap_content"
			   	        android:layout_weight="7"
			   	        android:textSize="30sp"
			   	        android:gravity="right"
			   	        android:text="@string/default_value_kmh"
			   	        />
			   	    <TextView 
			   	        android:layout_width="0dp"
			   	        android:layout_height="wrap_content"
			   	        android:layout_weight="3"
			   	        android:textSize="13sp"
			   	        android:text="@string/unit_kmh"
			   	        />
		   	        
		   	    </LinearLayout>
		   	</LinearLayout> 
	   	    <!-- AVG SPEED END -->
	   	    <!-- ALTITUDE START -->
		   	<LinearLayout
		   	    android:layout_width="match_parent" 
		   	    android:layout_height="wrap_content"
		   	    android:orientation="vertical"
		   	    >
		   	    <TextView 
		   	        android:layout_width="match_parent"
		   	        android:layout_height="wrap_content"
		   	        style="@style/title"
		   	        android:text="@string/title_altitude"
		   	        />
		   	    <LinearLayout 
		   	        android:layout_width="match_parent"
		   	        android:layout_height="wrap_content"
		   	        android:orientation="horizontal"
		   	        >
			   	    <TextView 
			   	        android:id="@+id/id_tv_current_altitude"
			   	        android:layout_width="0dp"
			   	        android:layout_height="wrap_content"
			   	        android:layout_weight="7"
			   	        android:textSize="30sp"
			   	        android:gravity="right"
			   	        android:text="@string/default_value_m"
			   	        />
			   	    <TextView 
			   	        android:layout_width="0dp"
			   	        android:layout_height="wrap_content"
			   	        android:layout_weight="3"
			   	        android:textSize="13sp"
			   	        android:text="@string/unit_m"
			   	        />
		   	    </LinearLayout>
		   	</LinearLayout> 
	   	    <!-- ALTITUDE END -->
	   	</LinearLayout> 
		<!-- AVG SPEED, ALTITUDE END -->
	</LinearLayout>


    <!-- DISTANCE, TRAVEL TIME START -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	   	<!-- DISTANCE START -->
	   	<LinearLayout 
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="6"
	   	    android:orientation="vertical">
	   	   	<TextView 
	   	   	    android:layout_width="match_parent"
	   	   	    android:layout_height="wrap_content"
	   	   	    style="@style/title"
	   	   	    android:text="@string/title_distance"/> 
	   	    <LinearLayout 
	   	        android:layout_width="match_parent"
	   	        android:layout_height="wrap_content"
	   	        android:orientation="horizontal"
	   	        android:gravity="center_horizontal"
	   	        >
		   	    <TextView 
		   	        android:id="@+id/id_tv_distance"
		   	        android:layout_width="wrap_content"
		   	        android:layout_height="wrap_content"
		   	        android:textSize="30sp"
		   	        android:gravity="right"
		   	        android:text="@string/default_value_m"
		   	        />
		   	    <TextView 
		   	        android:layout_width="wrap_content"
		   	        android:layout_height="wrap_content"
		   	        android:textSize="15sp"
		   	        android:text="@string/unit_m"
		   	        />
	   	        
	   	    </LinearLayout>
	   	</LinearLayout>
	   	<!-- DISTANCE END -->
	   	<!-- TRAVEL TIME START -->
	   	<LinearLayout 
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="4"
	   	    android:orientation="vertical">
	   	   	<TextView 
	   	   	    android:layout_width="match_parent"
	   	   	    android:layout_height="wrap_content"
	   	   	    style="@style/title"
	   	   	    android:text="@string/title_travel_time"/> 
			<Chronometer
			    android:id="@+id/id_cm"
        		android:layout_width="match_parent"
   				android:layout_height="wrap_content" 
	   	   	    android:gravity="center"
        		android:textSize="30sp" />
	   	</LinearLayout>
	   	<!-- TRAVEL TIME END -->
	</LinearLayout>
    <!-- DISTANCE, TRAVEL TIME START -->

	
	<!-- LOG START -->
	<LinearLayout 
	    android:id="@+id/id_ll_log"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	   	<LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    >
		   	<TextView 
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    android:text="Distance"
		   	    />
		   	<TextView 
		   	    android:id="@+id/id_tv_last_distance"
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    />
	   	</LinearLayout>
	   	<LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    >
		   	<TextView 
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    android:text="Location Time"
		   	    />
		   	<TextView 
		   	    android:id="@+id/id_tv_location_time"
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    />
	   	</LinearLayout>
	   	<LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    >
		   	<TextView 
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    android:text="Last Location Time"
		   	    />
		   	<TextView 
		   	    android:id="@+id/id_tv_last_location_time"
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    />
	   	</LinearLayout>
	   	<LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    >
		   	<TextView 
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    android:text="Latitude"
		   	    />
		   	<TextView 
		   	    android:id="@+id/id_tv_latitude"
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    />
	   	</LinearLayout>
	   	<LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    >
		   	<TextView 
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    android:text="Longitude"
		   	    />
		   	<TextView 
		   	    android:id="@+id/id_tv_longitude"
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    />
	   	</LinearLayout>
	   	<LinearLayout 
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="horizontal"
	   	    >
		   	<TextView 
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    android:text="Current Status"
		   	    />
		   	<TextView 
		   	    android:id="@+id/id_tv_current_status"
		   	    android:layout_width="0dp"
		   	    android:layout_height="wrap_content"
		   	    android:layout_weight="1"
		   	    />
	   	</LinearLayout>
	</LinearLayout>
	<!-- LOG END -->	

	<!-- MUSIC STTART -->	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	   	<TextView 
	   	    android:id="@+id/id_tv_music_artist"
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="1"
		    android:gravity="center"
	   	    />
	   	<TextView 
	   	    android:id="@+id/id_tv_music_title"
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="1"
		    android:gravity="center"
	   	    />
	</LinearLayout>
	<!-- MUSIC END -->	
	
	<!-- BLANK START -->		
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    >
	</LinearLayout>
	<!-- BLANK END -->		

	<!-- TIME & BATTERY START -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    >
	   	<View 
	   	    android:layout_width="0dp"
	   	    android:layout_height="0dp"
	   	    android:layout_weight="1"/>
	   	<ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/ic_watch_white_24dp"/>
		<DigitalClock
		    android:id="@+id/id_dc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="30sp" />
	   	<View 
	   	    android:layout_width="0dp"
	   	    android:layout_height="0dp"
	   	    android:layout_weight="1"/>
	   	<ImageView 
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/ic_battery_full_white_36dp"/>
		<TextView
	        android:id="@+id/id_tv_battery_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:textSize="30sp"
	        />
	   	<View 
	   	    android:layout_width="0dp"
	   	    android:layout_height="0dp"
	   	    android:layout_weight="1"/>
	</LinearLayout>
	<!-- TIME & BATTERY END -->
	

	<!-- BIKE ICON START -->	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    >
	   	<ImageView
			android:id="@+id/id_iv_bike"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/ic_directions_bike_white_48dp" 
	   	    android:layout_gravity="center"
	   	    />
	</LinearLayout>
	<!-- BIKE ICON END -->	

	<!-- CONTROL BUTTON START -->
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	   	<ImageView 
	   	    android:id="@+id/id_iv_delete"
	   	    android:layout_width="0dp"
	   	    android:layout_height="match_parent"
	   	    android:layout_weight="1"
	   	    android:src="@drawable/ic_delete_white_36dp"/>
	   	<ImageView
	   	    android:id="@+id/id_iv_play_stop"
	   	    android:layout_width="0dp"
	   	    android:layout_height="match_parent"
	   	    android:layout_weight="1"
	   	    android:src="@drawable/ic_play_circle_outline_white_48dp"/>
	   	<ImageView 
	   	    android:id="@+id/id_iv_setting"
	   	    android:layout_width="0dp"
	   	    android:layout_height="match_parent"
	   	    android:layout_weight="1"
	   	    android:src="@drawable/ic_settings_white_36dp"/>
	</LinearLayout>
	<!-- CONTROL BUTTON END -->

</LinearLayout>
