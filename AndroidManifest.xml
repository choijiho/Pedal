<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.gringrid.pedal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />
   
    <!-- PERMISSION START -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- PERMISSION END -->
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <!-- HOME START -->
        <activity
            android:name="net.gringrid.pedal.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" 
            android:theme="@style/CustomTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- HOME END -->

        <!-- SETTING START -->
        <activity 
            android:name="net.gringrid.pedal.activity.RidingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        <!-- SETTING END -->

        <!-- SETTING START -->
        <activity 
            android:name="net.gringrid.pedal.activity.SettingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        <!-- SETTING END -->
        
        <!-- RIDELIST START -->
        <activity 
            android:name="net.gringrid.pedal.activity.RidingListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        <!-- RIDELIST END -->

        <!-- GPSLOGLIST START -->
        <activity 
            android:name="net.gringrid.pedal.activity.GpsLogListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        <!-- GPSLOGLIST END -->
        <activity 
            android:name=".activity.PopupBrowserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        <activity 
            android:name=".activity.RidingDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        <activity 
            android:name=".activity.StravaAPITestActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        <activity 
            android:name=".activity.ExpandableRidingListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CustomTheme"
            >
        </activity>
        
        
    </application>

</manifest>
